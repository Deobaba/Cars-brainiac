{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts","src/tests/**/*.ts",],
  "exclude": ["node_modules","tests"]
}
